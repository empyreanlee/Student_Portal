<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/midnight_dusk" />
    </LinearLayout>


    <!-- res/layout/item_course.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewCourse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 1"
            android:textColor="@color/midnight_dusk" />

        <TextView
            android:id="@+id/textViewCourse2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 2"
            android:textColor="@color/midnight_dusk"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially set to gone -->

        <TextView
            android:id="@+id/textViewCourse3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 3"
            android:textColor="@color/midnight_dusk"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially set to gone -->

        <TextView
            android:id="@+id/textViewCourse4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 4"
            android:textColor="@color/midnight_dusk"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially set to gone -->

        <TextView
            android:id="@+id/textViewCourse5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Course 5"
            android:textColor="@color/midnight_dusk"
            android:layout_marginTop="8dp"
            android:visibility="gone" /> <!-- Initially set to gone -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
